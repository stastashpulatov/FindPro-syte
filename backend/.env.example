# Database
DATABASE_URL=sqlite:///./findpro.db
# Environment selection: development | test | production
APP_ENV=development

# Optional: MySQL DSN for testing (used when APP_ENV=test)
# MYSQL_DATABASE_URL=mysql+pymysql://user:password@localhost:3306/findpro_test

# Optional: PostgreSQL DSN for production (used when APP_ENV=production)
# POSTGRES_DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/findpro

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API
API_V1_STR=/api/v1
PROJECT_NAME=FindPro API
